<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Index"
    android:id="@+id/RelativeLayout"
    android:background="@drawable/stars">

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/bob"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/imagebob"
        android:layout_above="@+id/butRegister"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/butRegister"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView1"
        android:background="#ffeb3b"
        android:onClick="doRegister" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button2"
        android:layout_below="@+id/butRegister"
        android:layout_alignEnd="@+id/butRegister"
        android:background="#ffeb3b"
        android:layout_alignParentStart="true"
        android:onClick="doLogin" />


</RelativeLayout>
